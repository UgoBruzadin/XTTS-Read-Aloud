{
  "manifest_version": 3,
  "name": "Text-to-Speech Chrome Extension",
  "version": "1.0",
  "permissions": [
      "contextMenus",
      "storage",
      "activeTab",
      "scripting"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html"
  }
}
